<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    tools:context="mx.itesm.behealty.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/get_edad"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Calendario_Button"
            android:layout_marginStart="79dp"
            android:layout_marginTop="169dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="244dp"
            tools:layout_editor_absoluteY="141dp" />

        <TextView
            android:id="@+id/peso_textview"
            android:textColor="@color/colorPrimaryDark"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Calendario_Button"
            android:layout_marginBottom="44dp"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/Calendario_Button"
            android:text="TextView"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="255dp" />

        <Button
            android:id="@+id/Calendario_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_marginStart="124dp"
            android:layout_marginTop="127dp"
            android:text="Calendario"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="33dp" />

        <TextView
            android:id="@+id/get_estatura"
            android:textColor="@color/colorPrimaryDark"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/estatura_textview"
            android:layout_centerVertical="true"
            android:text="TextView"
            tools:layout_editor_absoluteX="244dp"
            tools:layout_editor_absoluteY="205dp" />

        <TextView
            android:id="@+id/get_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"

            android:layout_alignBaseline="@+id/get_edad"
            android:layout_alignBottom="@+id/get_edad"
            android:layout_alignStart="@+id/estatura_textview"
            android:text="TextView"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="255dp" />

        <TextView
            android:id="@+id/edad_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/estatura_textview"
            android:layout_alignBottom="@+id/estatura_textview"
            android:layout_alignStart="@+id/get_edad"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"

            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="141dp" />

        <TextView
            android:id="@+id/estatura_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"

            android:layout_alignStart="@+id/peso_textview"
            android:layout_below="@+id/Calendario_Button"
            android:layout_marginTop="30dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="205dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
