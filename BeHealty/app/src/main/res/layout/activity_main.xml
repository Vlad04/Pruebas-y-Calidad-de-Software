<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    tools:context="mx.itesm.behealty.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/get_edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edad_textview"

            android:layout_alignBottom="@+id/edad_textview"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="79dp"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="244dp"
            tools:layout_editor_absoluteY="141dp" />

        <TextView
            android:id="@+id/peso_textview"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edad_textview"
            android:layout_marginStart="36dp"
            android:layout_marginTop="33dp"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="255dp" />

        <Button
            android:id="@+id/Calendario_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/get_edad"
            android:layout_marginBottom="27dp"
            android:text="Calendario"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="33dp" />

        <TextView
            android:id="@+id/get_estatura"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/estatura_textview"
            android:layout_alignBottom="@+id/estatura_textview"
            android:layout_alignStart="@+id/get_peso"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="244dp"
            tools:layout_editor_absoluteY="205dp" />

        <TextView
            android:id="@+id/get_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/peso_textview"
            android:layout_alignBottom="@+id/peso_textview"
            android:layout_alignStart="@+id/get_edad"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="255dp" />

        <TextView
            android:id="@+id/edad_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/peso_textview"
            android:layout_marginTop="49dp"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="141dp" />

        <TextView
            android:id="@+id/estatura_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/peso_textview"
            android:layout_alignTop="@+id/peso_textview"
            android:layout_marginTop="52dp"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="205dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="368dp"
            android:layout_marginTop="225dp"
            android:layout_height="200dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="1dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
